<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutor_course_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/common_white">

    <TextView
        android:id="@+id/tcli_category1Name"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical|left"
        android:textColor="@color/common_green"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tcli_category2Name"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/tcli_category1Name"
        android:paddingLeft="10dp"
        android:textColor="@color/common_green"
        android:gravity="center_vertical|left"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tcli_category3Name"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/tcli_category2Name"
        android:paddingLeft="10dp"
        android:textColor="@color/common_green"
        android:gravity="center_vertical|left"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tcli_hourse"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="小时"
        android:gravity="center_vertical|left"
        android:textSize="18dp" />
	<TextView
        android:id="@+id/tcli_duration"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toLeftOf="@id/tcli_hourse"
        android:gravity="center_vertical|left"
        android:textSize="18dp" />
	<TextView
        android:id="@+id/tcli_rmb"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toLeftOf="@id/tcli_duration"
        android:gravity="center_vertical|left"
        android:text="元/"
        android:textSize="18dp" />
	<TextView
        android:id="@+id/tcli_tuition"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_toLeftOf="@id/tcli_rmb"
        android:gravity="center_vertical|left"
        android:textColor="@color/common_red"
        android:textSize="18dp" />
	<View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/tcli_category1Name"
        android:background="@color/common_gray" />
</RelativeLayout>