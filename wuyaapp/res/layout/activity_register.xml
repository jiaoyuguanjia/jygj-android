<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6EE"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/register_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/common_black"
       android:textSize="20pt" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp" >

        <EditText
            android:id="@+id/input_phone_number"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:background="@color/common_white"
            android:hint="请输入手机号"
             android:textColor="@color/common_gray"
            android:inputType="phone" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/get_verification_code"
            android:layout_width="118dp"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/input_phone_number"
            android:background="@color/common_background"
            android:text="获取验证码"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <EditText
        android:id="@+id/input_verification_code"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="3dp"
         android:textColor="@color/common_gray"
        android:background="@color/common_white"
        android:hint="请输入短信验证码" />

    <EditText
        android:id="@+id/set_password"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/common_white"
        android:hint="请设置账号密码"
         android:textColor="@color/common_gray"
        android:inputType="textPassword" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/agree_terms"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:src="@drawable/terms_yes" />

        <TextView
            android:id="@+id/agree_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/agree_terms"
            android:text="我已阅读并同意" />

        <TextView
            android:id="@+id/privacy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/agree_text"
            android:text="使用条款和隐私政策"
            android:textColor="@color/common_background" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/common_background"
            android:text="注册"
            android:textColor="@color/common_white"
            android:textSize="20pt" />
    </RelativeLayout>

</LinearLayout>