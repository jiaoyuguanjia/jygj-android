<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tutor_head_img"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:src="@drawable/tutor_head"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/tutor_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赖老师"
                android:textSize="18dp"
                android:textColor="@color/common_black"
                android:layout_alignTop="@+id/tutor_head_img"
                android:layout_toRightOf="@+id/tutor_head_img"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:id="@+id/tutor_auth_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tutor_certified"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"/>
            <TextView
                android:id="@+id/tutor_intro_txt"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="音乐问问，稳稳歌唱音乐问问稳稳稳稳歌唱音乐问问稳稳歌！"
                android:textColor="@color/common_black"
                android:layout_below="@+id/tutor_name_txt"
                android:layout_toRightOf="@+id/tutor_head_img"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/tutor_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教龄："
                android:layout_below="@+id/tutor_intro_txt"
                android:layout_toRightOf="@+id/tutor_head_img"
                android:layout_marginLeft="16dp"
                android:layout_alignBottom="@+id/tutor_head_img"/>
            <TextView
                android:id="@+id/tutor_age_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/common_black"
                android:layout_below="@+id/tutor_intro_txt"
                android:layout_toRightOf="@+id/tutor_age_txt"
                android:layout_alignBottom="@+id/tutor_head_img"/>
            <TextView
                android:id="@+id/tutor_age_suffix_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textColor="@color/common_black"
                android:layout_below="@+id/tutor_intro_txt"
                android:layout_toRightOf="@+id/tutor_age_num_txt"
                android:layout_alignBottom="@+id/tutor_head_img"/>
            <ListView
                android:id="@+id/tutor_account_list_view"
                android:layout_width="fill_parent"
                android:layout_height="500dp"
                android:fastScrollEnabled="true"
                android:focusable="true"
                android:layout_below="@+id/tutor_head_img"/>
            <Button
                android:id="@+id/tutor_logout_btn"
                android:layout_width="260dp"
                android:layout_height="54dp"
                android:background="@drawable/logout_btn"
                android:text="退出登录"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tutor_account_list_view"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
</ScrollView>

